%h1= t('dashboard.user.edit user profile')

= simple_form_for @user, url: dashboard_user_url, method: :put do |f|
  = f.input :email
  = f.input :first_name
  = f.input :last_name
  = f.input :location
  = f.input :timezone, as: :time_zone
  = f.input :cv_url
  = f.input :github
  = f.input :primary_skill, collection: Skill.all, include_blank: false
  = f.button :submit 
